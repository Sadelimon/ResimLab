<Window x:Class="ResimLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResimLab - Görüntü İşleme Editörü" Height="650" Width="1000" 
        Background="#1E1E1E" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#252526" BorderBrush="#333" BorderThickness="0,0,1,0">
            <StackPanel Margin="10">
                <Label Content="RESİMLAB" Foreground="#007ACC" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Label Content="Dosya" Foreground="Gray" FontWeight="Bold"/>
                <Button x:Name="BtnYukle" Content="📂 Resmi Aç" Height="35" Margin="0,2" Click="BtnYukle_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnKaydet" Content="💾 Kaydet" Height="35" Margin="0,2" Click="BtnKaydet_Click" Background="#2E7D32" Foreground="White" BorderThickness="0"/>
                <Button x:Name="BtnSifirla" Content="↺ Sıfırla" Height="35" Margin="0,2" Click="BtnSifirla_Click" Background="#C62828" Foreground="White" BorderThickness="0"/>

                <Separator Background="#444" Margin="0,15"/>

                <Label Content="Işık Ayarları" Foreground="Gray" FontWeight="Bold"/>

                <Label Content="Parlaklık" Foreground="LightGray" FontSize="11"/>
                <Slider x:Name="SliderParlaklik" Minimum="-100" Maximum="100" Value="0" TickFrequency="10" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>

                <Label Content="Kontrast" Foreground="LightGray" FontSize="11" Margin="0,5,0,0"/>
                <Slider x:Name="SliderKontrast" Minimum="0.5" Maximum="3.0" Value="1.0" TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>

                <Separator Background="#444" Margin="0,15"/>

                <Label Content="Döndürme" Foreground="Gray" FontWeight="Bold"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="↶ Sol" Margin="0,0,2,0" Height="30" Click="BtnSolaDon_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
                    <Button Grid.Column="1" Content="Sağ ↷" Margin="2,0,0,0" Height="30" Click="BtnSagaDon_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
                </Grid>
                <Button Content="↕ Ayna (Dikey)" Margin="0,5" Height="30" Click="BtnAyna_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <Separator Background="#444" Margin="0,15"/>

                <Label Content="Filtreler" Foreground="Gray" FontWeight="Bold"/>
                <Button Content="Gri Tonlama" Margin="0,2" Height="30" Click="BtnGri_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
                <Button Content="Bulanıklaştır (Blur)" Margin="0,2" Height="30" Click="BtnBlur_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>
                <Button Content="Keskinleştir (Sharpen)" Margin="0,2" Height="30" Click="BtnKeskin_Click" Background="#3E3E42" Foreground="White" BorderThickness="0"/>

                <Separator Background="#444" Margin="0,15"/>

                <Label Content="Yapay Zeka (ML)" Foreground="Gray" FontWeight="Bold"/>
                <Button x:Name="BtnYuzBul" Content="🤖 Yüzleri Bul" Height="35" Margin="0,2" Click="BtnYuzBul_Click" Background="#E65100" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#121212" Margin="10" CornerRadius="5" ClipToBounds="True">
            <Image x:Name="ImgAnaEkran" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>